extends layout

block main
  div#question3
    h2 Question #3
    figure
      img(src=`${quiz.shapeImage}`, alt="")
    h3 What is the capitol of this country?

    form(action=`/GeoQuizzer/${quiz.id}/question3` method="post")
      fieldset
        each capitol in answers
          label
            input(type="radio" name="flag" value=`${capitol}`)
            =capitol
            
        button(type="submit") Submit Answer